<h1> Add a New Post </h1>
<br>
<br>
<%=form_for(@post) do |f|%>
<%= f.label :title %>
<%= f.text_field :title %> <br><br>
<%= f.label :content %>
<%= f.text_area :content %> <br><br>
<%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br><br>
<%= f.fields_for :categories, @post.categories.build do |cat|%>
    <%= cat.text_field :name %><br>
<% end %>
<%= f.submit %>
<% end %>

